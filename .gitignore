# =======================================
# Android / Kotlin Project .gitignore
# =======================================

# IDE files
.idea/
*.iml

# Gradle files
.gradle/
build/
**/build/
local.properties
gradle-app.setting
.gradle/
.cxx/
.externalNativeBuild/

# Kotlin and Java specific
*.class
*.kt~ 
.kotlin/

# Logs
*.log

# macOS system files
.DS_Store

# Windows system files
Thumbs.db

# Captures (Android screenshots, etc.)
captures/

# IntelliJ specific
.idea/caches
.idea/libraries
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml

# Package files
*.jar
*.war
*.nar
*.ear
*.zip
*.tar.gz
*.rar

# Virtual machine crash logs
hs_err_pid*
replay_pid*

# BlueJ files
*.ctxt

# J2ME temporary files
.mtj.tmp/

# Keystore files (security-sensitive)
*.jks
*.keystore

# Gradle Wrapper exceptions (keep these)
!gradle/wrapper/gradle-wrapper.jar
!gradle/wrapper/gradle-wrapper.properties

# =======================================
# End of .gitignore
# =======================================
